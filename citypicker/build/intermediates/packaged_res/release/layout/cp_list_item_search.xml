<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="?attr/cpSearchItemHorizontal"
    android:background="?attr/cpSearchItemBackground">

    <TextView
        android:id="@+id/tv_list_item_search"
        android:layout_width="match_parent"
        android:layout_height="?attr/cpSearchItemHeight"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="?attr/cpSearchItemTextSize"
        android:textColor="?attr/cpSearchItemTextColor"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>
</LinearLayout>